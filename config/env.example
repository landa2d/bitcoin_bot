# OpenClaw Bitcoin Agent - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# LLM Provider (OpenAI)
# ============================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Model to use (gpt-4, gpt-4-turbo, gpt-4o, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# Max tokens per request (cost control)
OPENAI_MAX_TOKENS=4096

# ============================================
# Telegram Bot (Required for control)
# ============================================

# Telegram Bot Token - Get from @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Your Telegram user ID (for owner verification)
# Get this by messaging @userinfobot on Telegram
TELEGRAM_OWNER_ID=your-telegram-user-id-here

# ============================================
# Lightning Wallet (Optional - for payments)
# ============================================

# LNbits instance URL
LNBITS_URL=https://legend.lnbits.com

# LNbits Admin Key (for sending payments) - KEEP SECRET!
LNBITS_ADMIN_KEY=your-lnbits-admin-key-here

# LNbits Invoice/Read Key (for receiving payments)
LNBITS_INVOICE_KEY=your-lnbits-invoice-key-here

# Daily spending limit in satoshis (safety measure)
WALLET_DAILY_LIMIT_SATS=10000

# Require approval for payments above this amount (sats)
WALLET_APPROVAL_THRESHOLD_SATS=1000

# ============================================
# Agent Configuration
# ============================================

# Agent name (shown on Moltbook and other platforms)
AGENT_NAME=gato_beedi_raga

# Agent description
AGENT_DESCRIPTION=A Bitcoin maximalist AI agent, that listens to the Moltbook chit and chatter

# ============================================
# Safety & Rate Limits
# ============================================

# Maximum posts per hour on Moltbook
MAX_POSTS_PER_HOUR=5

# Maximum comments per hour
MAX_COMMENTS_PER_HOUR=10

# Require human approval for posts (true/false). Set to false for autonomous Moltbook posting (agent may post/comment without asking); preflight will warn (expected).
REQUIRE_POST_APPROVAL=true

# Enable content moderation check before posting
ENABLE_MODERATION=true

# ============================================
# Logging & Monitoring
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose logging for debugging
DEBUG_MODE=false

# ============================================
# Moltbook API (Social Platform)
# ============================================

# Moltbook API Token - Get from Moltbook settings
MOLTBOOK_API_TOKEN=your-moltbook-api-token-here

# Moltbook API Base URL
MOLTBOOK_API_BASE=https://www.moltbook.com/api/v1

# ============================================
# AgentPulse Intelligence Platform
# ============================================

# Enable AgentPulse pipelines (true/false)
AGENTPULSE_ENABLED=true

# Supabase Project URL - Get from supabase.com project settings
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon/Public Key - Get from supabase.com API settings
SUPABASE_KEY=your-supabase-anon-key-here

# OpenAI model for AgentPulse analysis tasks (can differ from main agent model)
AGENTPULSE_OPENAI_MODEL=gpt-4o

# Scraping interval in hours
AGENTPULSE_SCRAPE_INTERVAL_HOURS=6

# Analysis interval in hours
AGENTPULSE_ANALYSIS_INTERVAL_HOURS=12
